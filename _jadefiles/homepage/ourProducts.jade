mixin img(data, width)
  - var productData = data;
  - var imgWidth    = width;
  div(class="catalog-wrapper-#{imgWidth}")
    | {% for img in site.data.products.#{productData}.img-#{imgWidth} %}
    .img-wrapper
      img(data-original="{{ img.url }}", alt="{{ img.title }}").product-img
      noscript
        img(src="{{ img.url }}", alt="{{ img.title }}", width="100%", height="auto")
      .description
        p 
          span.title {{ img.title }}
          br
          | {{ img.price }}
          br
          | {{ img.description }}
    | {% endfor %}


.row.section-wrap#ourProducts
  .ourProducts-wrapper
    h1 Our Products
    
    .catalog-wrapper#clothes
      h2 Clothes..
      +img("baju", 30)
      +img("baju", 50)
        
    .catalog-wrapper#foods
      h2 Foods..
      +img("makanan", 30)
      +img("makanan", 50)
      
    .catalog-wrapper#others
      h2 Others..
      +img("lain2", 30)
      +img("lain2", 50)
      
      
